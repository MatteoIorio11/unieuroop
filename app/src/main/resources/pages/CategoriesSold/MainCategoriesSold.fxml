<GridPane prefHeight="638.0" prefWidth="810.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <BarChart fx:id="barCategories" title="Total categories sold">
         <xAxis>
            <CategoryAxis label="Categories" side="BOTTOM" fx:id="xAxis" />
         </xAxis>
         <yAxis>
            <NumberAxis fx:id="yAxis" label="Quantity Sold" side="LEFT" />
         </yAxis>
      </BarChart>
      <BorderPane prefHeight="486.0" prefWidth="741.0" GridPane.rowIndex="1">
         <bottom>
            <Pane prefHeight="76.0" prefWidth="810.0" BorderPane.alignment="CENTER">
               <children>
                  <ComboBox id="comboCategories" fx:id="comboCategories" layoutX="194.0" layoutY="21.0" prefHeight="25.0" prefWidth="221.0" />
                  <Button id="buttonClearAll" fx:id="buttonClear" layoutX="540.0" layoutY="21.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="101.0" text="CLEAR ALL" />
                  <Label layoutX="14.0" layoutY="25.0" prefHeight="17.0" prefWidth="170.0" text="SELECT CATEGORIES : " />
               </children>
            </Pane>
         </bottom>
         <center>
            <BarChart fx:id="barProductsSold" title="Products sold" BorderPane.alignment="CENTER">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
         </center>
         <right>
            <ListView fx:id="listLegend" prefHeight="244.0" prefWidth="150.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </ListView>
         </right>
      </BorderPane>
   </children>
</GridPane>
